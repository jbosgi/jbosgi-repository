<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.osgi.repository</groupId>
        <artifactId>jbosgi-repository-parent</artifactId>
        <version>1.3.0.Beta2</version>
    </parent>

    <name>JBossOSGi Repository: Bundle</name>

    <artifactId>jbosgi-repository</artifactId>
    <packaging>bundle</packaging>

	<!-- Dependencies -->
    <dependencies>
        <dependency>
            <groupId>org.jboss.osgi.repository</groupId>
            <artifactId>jbosgi-repository-core</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.osgi.repository</groupId>
            <artifactId>jbosgi-repository-api</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.osgi.resolver</groupId>
            <artifactId>jbosgi-resolver-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.osgi.metadata</groupId>
            <artifactId>jbosgi-metadata</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- Provided Dependencies -->
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.enterprise</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${bundle.version}</Bundle-Version>
                        <Bundle-Activator>org.jboss.osgi.repository.internal.RepositoryActivator</Bundle-Activator>
                        <Import-Package>
                            javax.xml.namespace, 
                            javax.xml.stream, 
                            org.jboss.logging;version="[3.0,4.0)",
                            org.jboss.osgi.metadata;version="[2.0,3.0)",
                            org.jboss.osgi.resolver;version="[2.0,3.0)",
                            org.jboss.osgi.resolver.spi;version="[2.0,3.0)",
                            org.osgi.framework;version="[1.5,2.0)",
                            org.osgi.framework.wiring;version="[1.0,2.0)",
                            org.osgi.resource;version="[1.0,2.0)",
                            org.osgi.service.resolver;version="[1.0,2.0)",
                            org.osgi.util.tracker;version="[1.4,2.0)",
                            org.jboss.modules;resolution:=optional
                        </Import-Package>
                        <Embed-Dependency>
                            jbosgi-repository-core;inline=true,
                            jbosgi-repository-api;inline=true,
                            jbosgi-resolver-api;inline=false,
                            jbosgi-metadata;inline=false,
                        </Embed-Dependency>
                        <_exportcontents>
                            org.osgi.service.repository;version="1.0",
                            org.jboss.osgi.repository;version="${bundle.version}",
                            org.jboss.osgi.repository.spi;version="${bundle.version}",
                            org.jboss.osgi.resolver;version="${version.jboss.osgi.resolver}",
                            org.jboss.osgi.resolver.spi;version="${version.jboss.osgi.resolver}",
                            org.jboss.osgi.metadata;version="${version.jboss.osgi.metadata}",
                        </_exportcontents>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
